<!DOCTYPE html>
<html lang="en">

<head>
	{{>head}}
</head>

<body>
	{{>nav}}

	<div class="container main ">

		<div class="row ">
			<div class="col-md-8 col-md-offset-2 ">

				<div class="row ">

					<div class="col-md-4 ">
						<img class="profile_icon " src="{{user.profile_pic_url}} ">
					</div>

					<div class="col-md-8 ">
						<h1 class="header ">{{user.username}}</h1>

						<div class="row ">

							<div class="col-md-3 ">
								<span>
									<strong>{{user.media.count}}</strong> Posts</span>
							</div>

							<div class="col-md-3 ">
								<span>
									<strong>{{user.followed_by.count}}</strong> Followers</span>

							</div>

							<div class="col-md-3 ">
								<span>
									<strong>{{user.follows.count}}</strong> Following</span>

							</div>

						</div>

						<p style="margin-top:12px; ">
							<strong>{{user.full_name}}</strong> {{user.biography}}</p>
						<p>
							<strong>{{user.external_url}}</strong>
						</p>

					</div>

				</div>

				<div class=" row ">
					{{#user.media.nodes}}

					<div class="col-md-4 ">

						<div class="post ">
							<img src="{{thumbnail_src}} " />
						</div>

					</div>

					{{/user.media.nodes}}

				</div>

			</div>

		</div>

	</div>
</body>

</html>